# Environment variables for vendorWebsite
# Copy this file to .env and fill in real values for production.

# Database
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASS=
DB_NAME=vendor_information

# Application
APP_URL=https://vendorwebsite.test/

# Mail (SMTP) - set to your SMTP provider credentials
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=you@example.com
MAIL_PASS=your_smtp_password_or_app_password
MAIL_ENCRYPTION=tls

# Default admin (only for local/dev; override in production)
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=changeme
